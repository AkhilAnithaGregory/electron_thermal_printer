{
  "name": "printer_app",
  "version": "1.0.0",
  "description": "Desktop PDF/image printer app powered by Electron and Express",
  "author": "Your Name",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon main.js",
    "build": "electron-builder"
  },
  "keywords": [
    "electron",
    "pdf",
    "printer",
    "desktop"
  ],
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "pdf-lib": "^1.17.1",
    "pdf-to-printer": "^5.6.0"
  },
  "build": {
    "appId": "com.printer.desktop",
    "productName": "PrinterApp",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!node_modules/*/{test,tests}/**",
      "!**/*.md",
      "!**/.*",
      "!**/node_modules/.bin",
      "!**/package-lock.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PrinterApp"
    }
  }
}
